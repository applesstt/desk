extends ../layout/layout

append css_content
  link(rel='stylesheet', href='/css/login.css')

block content
  .row
    .col-md-4.col-md-offset-2
      form.login-form(method = 'post', action = '/users')
        input(type = 'hidden', name = '_csrf', value = '#{csrf_token}')
        h3.text-muted 让我们一起来发现这个有趣的世界
        p
          input.form-control(name='email', type='email', required, placeholder='请输入邮箱')
        p
          input.form-control(name = 'name', required, placeholder='请输入用户名')
        p
          input.form-control(name='password', type='password', required, pattern='.{6,}', title='密码不小于6位字符', placeholder='请输入密码')
        p
          button.btn.btn-lg.btn-success.btn-block(type = 'submit') 注册
    .col-md-4
      img(src='/img/login-loop.gif', width='100%')