extends ../layout/layout

append css_content
  link(rel='stylesheet', href='/css/login.css')

block content
  form.login-form
    .col-md-4.col-md-offset-2(method = 'post', action = '/users')
      input(type = 'hidden', name = '_csrf', value = '#{csrf_token}')
      h3.text-muted 让我们一起来发现这个有趣的世界
      p
        input.form-control(name = 'email', placeholder='请输入邮箱')
      p
        input.form-control(name = 'name', placeholder='请输入用户名')
      p
        input.form-control(type = 'password', name = 'password', placeholder='请输入密码')
      p
        input.form-control(type = 'password', name = 'repeat_password', placeholder='再次输入密码')
      p
        button.btn.btn-lg.btn-success.btn-block(type = 'submit') 注册
    .col-md-4
      img(src='/img/login-loop.gif', width='100%')